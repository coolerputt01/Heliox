---
import "../styles/signup.css";
import BaseLayout from "../layout/BaseLayout.astro";
---
<BaseLayout title="Heliox - Signup">
  <header></header>
<!-- From Uiverse.io by Yaya12085 --> 
<div class="form-container">
<form class="form">
    <p class="title">Sign In </p>
    <p class="message">Welcome back to Heliox</p>
        <label>
            <input required="" placeholder="" type="text" class="input">
            <span>Username</span>
        </label>
    <label>
        <input required="" placeholder="" type="password" class="input">
        <span>Password</span>
    </label>
    <button class="submit">Submit</button>
    <p class="signin">Don't have an account ? <a href="/signup">Sign up</a> </p>
</form>
</div>
<script type="module" src="https://cdn.jsdelivr.net/npm/nuekjs@latest/scripts/main.js"></script>
<script type="module">
  const navPath = "components/nuek/NavBar.nuek";
  const NavBar = new NuekComponent("header",navPath)
</script>

</BaseLayout>